{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../config/typescript/base.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "paths": {
      "@utilify/config/*": ["../config/*"]
    }
  },
  "include": ["src/**/*", "vitest.d.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
