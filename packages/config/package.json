{
  "name": "@tulx/config",
  "version": "0.1.0",
  "private": true,
  "description": "Shared TypeScript and ESLint configurations",
  "main": "index.js",
  "exports": {
    "./eslint/base": "./eslint/base.js",
    "./eslint/base-type-checked": "./eslint/base-type-checked.js",
    "./eslint/next": "./eslint/next.js",
    "./eslint": "./eslint/index.js"
  },
  "files": [
    "eslint",
    "typescript"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "prelint": "pnpm build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-unicorn": "^52.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.0.0"
  },
  "peerDependencies": {
    "eslint": "^8.0.0 || ^9.0.0"
  }
}
