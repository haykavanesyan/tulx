{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./typescript/base.json",
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "declaration": false,
    "declarationMap": false,
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": ["eslint/**/*.ts"],
  "exclude": ["node_modules", "dist", "typescript"]
}
